<div class="form-group">
    <label>First name:</label>
    <input required type="text" class="form-control" name="first_name">
</div>
<div class="form-group">
    <label>Last name:</label>
    <input required type="text" class="form-control" name="last_name">
</div>
<div class="form-group">
    <label class="radio-inline">
        <input required type="radio" name="gender" value="0" checked>Male
    </label>
    <label class="radio-inline">
        <input required type="radio" name="gender" value="1">Female
    </label>
</div>
<div class="form-group">
    <label>Company name:</label>
    <input required type="text" class="form-control" name="company_name">
</div>
<div class="form-group">
    <label>Position:</label>
    <input required type="text" class="form-control" name="job_title">
</div>
<div class="form-group">
    <label>Email:</label>
    <input required type="email" class="form-control" name="email">
</div>
<div class="form-group">
    <label>Phone:</label>
    <input required type="tel" class="form-control" name="phone">
</div>
<div class="form-group">
    <label>Avatar:</label>
    <input required type="url" class="form-control" name="avatar">
</div>
<button type="submit" class="btn btn-default">Submit</button>